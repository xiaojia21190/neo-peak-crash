# ===========================================
# Neon Peak Crash - 游戏服务器环境变量配置
# ===========================================

# ----------- 数据库配置 -----------
DATABASE_URL="postgresql://user:password@localhost:5432/neon_peak_crash"

# ----------- Redis 配置 -----------
REDIS_URL="redis://localhost:6379"

# ----------- 游戏服务器配置 -----------
# 游戏服务器端口
PORT=3001

# WebSocket CORS 允许的源（多个用逗号分隔）
WS_CORS_ORIGIN="http://localhost:3000,https://your-domain.com"

# ----------- Next.js 客户端配置 -----------
# WebSocket 服务器地址（客户端连接用）
NEXT_PUBLIC_WS_URL="http://localhost:3001"

# ----------- 认证配置 -----------
AUTH_SECRET="your-auth-secret-at-least-32-characters"
AUTH_URL="http://localhost:3000"

# Linux DO OAuth 配置
AUTH_LINUXDO_ID="your-linuxdo-client-id"
AUTH_LINUXDO_SECRET="your-linuxdo-client-secret"

# ----------- 支付配置（可选）-----------
# PAYMENT_CALLBACK_SECRET="your-payment-callback-secret"
